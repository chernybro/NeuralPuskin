<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue_chats_theme"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jolly_lodger"
        android:text="@string/label_text"
        android:textColor="@color/labelLilac"
        android:textSize="56sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilText"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="0dp"
        android:textColorHint="@android:color/darker_gray"
        app:endIconMode="clear_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/rounded_shape"
            android:gravity="top"
            android:hint="@string/enter_phrase"
            android:inputType="text"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:textSize="20sp"
            android:imeOptions="actionDone"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/selector"
        android:enabled="false"
        android:text="@string/geneerate_text_btn"
        android:textColor="@color/orange"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tilText" />


    <TextView
        android:id="@+id/responseText"
        android:scrollbars="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="112dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/bubble_pixel1"
        android:fontFamily="@font/merriweather_italic"
        android:maxWidth="250dp"
        android:maxHeight="200dp"
        android:text="@string/default_pushkin_text"
        android:textColor="#212121"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/imgPushkin"
        app:layout_constraintTop_toTopOf="@id/imgPushkin" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgPushkin"
        android:layout_width="112dp"
        android:layout_height="146dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/push"
        app:layout_constraintTop_toBottomOf="@id/tilText"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/temp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Креативность:"
        android:textColor="@color/orange"
        android:layout_marginStart="12dp"

        app:layout_constraintTop_toBottomOf="@id/imgPushkin"
        app:layout_constraintStart_toStartOf="parent"/>

    <FrameLayout
        android:layout_width="32dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/temp_text"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.slider.Slider
            android:id="@+id/temp_slider"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:rotation="270"
            android:stepSize="0.1"
            android:valueFrom="0.1"
            android:valueTo="2.0"
            app:trackColorActive="@color/orange"
            android:value="1"
            android:theme="@style/MyMaterialTheme"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>