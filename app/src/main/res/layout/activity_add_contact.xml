<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chat_blue">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_baseline_account_circle_24"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:id="@+id/edit_contact_image"/>



    <EditText
        android:background="@drawable/rounded_shape"
        android:id="@+id/et_name_contact"
        android:textColorHint="@color/grey"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:hint=" Введите имя бота"
        android:maxLength="25"
        android:textColor="@color/almost_white"
        android:layout_below="@id/edit_contact_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/add_contact_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/et_name_contact"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_chat_me"
        android:textColor="@color/almost_white"
        android:text="OK"
        android:layout_marginTop="32dp"/>



</RelativeLayout>